# Dockerfile for Agent Service with Consolidated Security Architecture
# Architecture: ConsolidatedAgentSecurity (70% code reduction via MCP framework delegation)
# Security: 4-control agent security pipeline integrated with MCP framework
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Consolidated Agent Security Defaults (can be overridden at runtime)
ENV ENABLE_PROMPT_PROTECTION=true
ENV ENABLE_CONTEXT_VALIDATION=true
ENV ENABLE_MCP_VERIFICATION=true
ENV ENABLE_RESPONSE_SANITIZATION=true
ENV MAX_CONTEXT_SIZE=10000
ENV PROMPT_INJECTION_THRESHOLD=0.7
ENV VERIFY_MCP_SIGNATURES=true
ENV TRUST_UNSIGNED_RESPONSES=false

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD ["uvicorn", "agent_service:app", "--host", "0.0.0.0", "--port", "8080"]
